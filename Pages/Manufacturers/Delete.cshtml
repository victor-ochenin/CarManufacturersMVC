@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CarManufacturersMVC.Pages.Manufacturers.DeleteModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CarManufacturersMVC</title>
    <link rel="stylesheet" href="~/css/cyberpunk.css" />
</head>
<body>
    <div class="container">
        <h1 class="page-title">Удаление производителя</h1>

        @if (Model.Error == null && Model.Manufacturer != null) {
            <div class="delete-form" style="background: rgba(0, 0, 0, 0.8); border: 2px solid #b9615f; border-radius: 8px; padding: 2rem; margin: 2rem auto; max-width: 600px; width: 100%; box-shadow: 0 0 20px rgba(185, 97, 95, 0.3);">
                <h2 style="color: #7ce7ed; margin-bottom: 1rem;">Подтверждение удаления</h2>
                <p style="color: #fff; margin-bottom: 1rem;">
                    Вы действительно хотите удалить производителя <strong>@Model.Manufacturer.Name</strong> из страны <strong>@Model.Manufacturer.Country</strong>?
                </p>
                
                @if (Model.HasRelatedCars) {
                    <div style="color: #ff6b6b; margin-bottom: 1rem; padding: 1rem; border: 1px solid #ff6b6b; border-radius: 8px;">
                        <strong>Внимание!</strong> У этого производителя есть связанные автомобили. 
                        При удалении производителя все связанные автомобили также будут удалены.
                    </div>
                }

                <form method="post" action="" id="delete-form">
                    <input type="hidden" name="id" value="@Model.Manufacturer.Id" />
                </form>
            </div>

            <div class="nav-links">
                <button type="submit" form="delete-form" class="cybr-btn">
                    Удалить
                    <span aria-hidden class="cybr-btn__glitch">Удалить</span>
                    <span aria-hidden class="cybr-btn__tag">DELETE</span>
                </button>
                
                <a asp-page="/Manufacturers/Index" class="cybr-btn">
                    Отмена
                    <span aria-hidden class="cybr-btn__glitch">Отмена</span>
                    <span aria-hidden class="cybr-btn__tag">CANCEL</span>
                </a>
            </div>
        }
        else
        {
            <div class="error-form" style="background: rgba(0, 0, 0, 0.8); border: 2px solid #b9615f; border-radius: 8px; padding: 2rem; margin: 2rem auto; max-width: 600px; width: 100%; box-shadow: 0 0 20px rgba(185, 97, 95, 0.3);">
                <h2 style="color: #7ce7ed; margin-bottom: 1rem;">Ошибка</h2>
                <p style="color: #fff;">@Model.Error</p>
            </div>
        }
    </div>
</body>
</html>
